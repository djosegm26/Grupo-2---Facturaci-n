<div class="product-card">
  <div class="product-image">
    <img src="<%= product.image %>" alt="<%= product.name %>" />
  </div>
  <div class="product-body">
    <h3><%= product.name %></h3>
    <p class="price">COP <%= product.price.toLocaleString() %></p>
    <p class="desc"><%= product.description %></p>
  </div>
</div>
