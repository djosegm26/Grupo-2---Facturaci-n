<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Clientes</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <h1>Gestión de Clientes</h1>
  </header>

  <main>
    <h2>Registro de Clientes</h2>
    <form id="clienteForm" action="/clientes/nuevo" method="POST">
      <input type="text" id="nombreCliente" placeholder="Nombre" name="nombre" required>
      <input type="text" id="identificacionCliente" placeholder="Identificación" name="identificacion" required>
      <input type="email" id="emailCliente" placeholder="Email" name="email" required>
      <input type="text" id="telefonoCliente" placeholder="Teléfono" name="telefono" required>
      <input type="text" id="direccionCliente" placeholder="Dirección" name="direccion" required>
      <button type="submit">Agregar Cliente</button>
    </form>

    <h2>Lista de Clientes</h2>
    <table id="tablaClientes">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Email</th>
          <th>Teléfono</th>
          <th>Dirección</th>
          <th>Identificación</th>
        </tr>
      </thead>
      <tbody>
        <% if (clientes && clientes.length > 0) { %>
          <% clientes.forEach(cliente => { %>
            <tr>
              <td><%= cliente.nombre %></td>
              <td><%= cliente.email %></td>
              <td><%= cliente.telefono %></td>
              <td><%= cliente.direccion %></td>
              <td><%= cliente.identificacion %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr><td colspan="5">No hay clientes registrados.</td></tr>
        <% } %>
      </tbody>
    </table>
  </main>

  <!-- <script src="js/clientes.js"></script> -->
</body>
</html>

