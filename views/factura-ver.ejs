<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Factura <%= factura.numero_factura %></title>

  <!-- Estilos generales del sistema -->
  <link rel="stylesheet" href="/css/style.css">

  <!-- Estilos internos solo para esta vista -->
  <style>
    body { font-family: Arial, sans-serif; margin: 2rem; }
    header h1 { margin-bottom: 1rem; }

    table { width: 100%; border-collapse: collapse; margin-top: 1rem; }
    th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
    th { background-color: #f5f5f5; }

    section { margin-bottom: 1.5rem; }

    /* Botones */
    .btn {
      display: inline-block;
      background: #14334d;
      color: white;
      padding: 6px 12px;
      border-radius: 4px;
      text-decoration: none;
      margin-top: 1rem;
    }
    .btn:hover {
      background: #0f2638;
    }

    .btn-success {
      background: #14334d;
    }
    .btn-success:hover {
      background: #14334d;
    }
  </style>
</head>

<body>

  <!-- =============================== -->
  <!-- ENCABEZADO: n√∫mero de factura   -->
  <!-- =============================== -->
  <header>
    <h1>Factura N¬∞ <%= factura.numero_factura %></h1>
  </header>

  <!-- =============================== -->
  <!-- INFORMACI√ìN GENERAL DE FACTURA  -->
  <!-- =============================== -->
  <section>
    <p>
      <strong>Fecha de emisi√≥n:</strong>
      <%= new Date(factura.fecha_emision).toISOString().slice(0,10) %>
    </p>

    <!-- IDs simples (relaciones con tablas cliente/usuario) -->
    <p><strong>ID Cliente:</strong> <%= factura.cliente_id %></p>
    <p><strong>ID Usuario (Emisor):</strong> <%= factura.usuario_id %></p>

    <!-- Estado local (pendiente, emitida, etc.) -->
    <p><strong>Estado:</strong> <%= factura.estado %></p>
  </section>

  <hr>

  <!-- =============================== -->
  <!-- LISTA DE DETALLES DE LA FACTURA -->
  <!-- =============================== -->
  <h3>Detalles de la factura</h3>

  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Producto / Servicio</th>
        <th>Descripci√≥n</th>
        <th>Cantidad</th>
        <th>Precio Unitario</th>
        <th>Subtotal</th>
      </tr>
    </thead>

    <tbody>
      <% if (detalles.length > 0) { %>

        <!-- Recorrido de cada l√≠nea de detalle -->
        <% detalles.forEach((d, i) => { %>
          <tr>
            <td><%= i + 1 %></td>

            <!-- Determinar si es producto o servicio seg√∫n su ID -->
            <td>
              <% if (d.producto_id) { %>
                Producto (ID: <%= d.producto_id %>)
              <% } else if (d.servicio_id) { %>
                Servicio (ID: <%= d.servicio_id %>)
              <% } else { %>
                -
              <% } %>
            </td>

            <!-- Descripci√≥n opcional -->
            <td><%= d.descripcion || "-" %></td>

            <td><%= d.cantidad %></td>

            <!-- Formato de moneda -->
            <td>‚Ç°<%= parseFloat(d.precio_unitario || 0).toFixed(2) %></td>
            <td>‚Ç°<%= parseFloat(d.subtotal || 0).toFixed(2) %></td>
          </tr>
        <% }) %>

      <% } else { %>
        <!-- Cuando no hay detalles -->
        <tr>
          <td colspan="6" style="text-align:center;">Sin detalles registrados</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <hr>

  <!-- =============================== -->
  <!-- TOTALES: subtotal, impuestos... -->
  <!-- =============================== -->
  <section style="margin-top: 1rem;">
    <p><strong>Subtotal:</strong> ‚Ç°<%= parseFloat(factura.subtotal || 0).toFixed(2) %></p>
    <p><strong>Impuestos:</strong> ‚Ç°<%= parseFloat(factura.impuestos || 0).toFixed(2) %></p>
    <p><strong>Total:</strong> ‚Ç°<%= parseFloat(factura.total || 0).toFixed(2) %></p>
  </section>

  <!-- =============================== -->
  <!-- BOT√ìN PARA ENVIAR A FACTUS      -->
  <!-- =============================== -->

  <!-- Enviar sin recargar la p√°gina -->
  <button 
      class="btn btn-success"
      onclick="enviarFactus('<%= factura.id %>')">
      üöÄ Enviar a Factus
  </button>

  <br><br>

  <!-- Volver atr√°s -->
  <a href="/facturas" class="btn">‚¨Ö Volver al listado</a>


  <!-- =================================================== -->
  <!-- SCRIPT: llamado fetch que env√≠a factura hacia Factus -->
  <!-- =================================================== -->
  <script>
    async function enviarFactus(id) {
      try {

        const respuesta = await fetch('/factus/enviar/' + id);
        const data = await respuesta.json();

        console.log("RESP FACTUS:", data);

        // Si Factus responde error
        if (!data.ok) {
          alert("‚ùå Error: " + JSON.stringify(data.error));
          return;
        }

        // Si se recibe el PDF desde Factus, abrirlo
        if (data.pdf_url) {
          window.open(data.pdf_url, "_blank");
        }

        alert("Factura enviada a Factus correctamente ‚úî");

      } catch (err) {
        console.error(err);
        alert("‚ùå Error enviando a Factus.");
      }
    }
  </script>

</body>
</html>


