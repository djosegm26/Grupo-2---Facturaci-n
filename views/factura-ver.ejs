<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Factura <%= factura.numero_factura %></title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body { font-family: Arial, sans-serif; margin: 2rem; }
    header h1 { margin-bottom: 1rem; }
    table { width: 100%; border-collapse: collapse; margin-top: 1rem; }
    th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
    th { background-color: #f5f5f5; }
    section { margin-bottom: 1.5rem; }

    .btn {
      display: inline-block;
      background: #14334d;
      color: white;
      padding: 6px 12px;
      border-radius: 4px;
      text-decoration: none;
      margin-top: 1rem;
    }
    .btn:hover { background: #0f2638; }

    .btn-success {
      background: #14334d;
    }
    .btn-success:hover {
      background: #14334d;
    }
  </style>
</head>

<body>
  <header>
    <h1>Factura N¬∞ <%= factura.numero_factura %></h1>
  </header>

  <section>
    <p><strong>Fecha de emisi√≥n:</strong> 
      <%= new Date(factura.fecha_emision).toISOString().slice(0,10) %>
    </p>
    <p><strong>ID Cliente:</strong> <%= factura.cliente_id %></p>
    <p><strong>ID Usuario (Emisor):</strong> <%= factura.usuario_id %></p>
    <p><strong>Estado:</strong> <%= factura.estado %></p>
  </section>

  <hr>

  <h3>Detalles de la factura</h3>
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Producto / Servicio</th>
        <th>Descripci√≥n</th>
        <th>Cantidad</th>
        <th>Precio Unitario</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% if (detalles.length > 0) { %>
        <% detalles.forEach((d, i) => { %>
          <tr>
            <td><%= i + 1 %></td>
            <td>
              <% if (d.producto_id) { %>
                Producto (ID: <%= d.producto_id %>)
              <% } else if (d.servicio_id) { %>
                Servicio (ID: <%= d.servicio_id %>)
              <% } else { %>
                -
              <% } %>
            </td>
            <td><%= d.descripcion || "-" %></td>
            <td><%= d.cantidad %></td>
            <td>‚Ç°<%= parseFloat(d.precio_unitario || 0).toFixed(2) %></td>
            <td>‚Ç°<%= parseFloat(d.subtotal || 0).toFixed(2) %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="6" style="text-align:center;">Sin detalles registrados</td></tr>
      <% } %>
    </tbody>
  </table>

  <hr>

  <section style="margin-top: 1rem;">
    <p><strong>Subtotal:</strong> ‚Ç°<%= parseFloat(factura.subtotal || 0).toFixed(2) %></p>
    <p><strong>Impuestos:</strong> ‚Ç°<%= parseFloat(factura.impuestos || 0).toFixed(2) %></p>
    <p><strong>Total:</strong> ‚Ç°<%= parseFloat(factura.total || 0).toFixed(2) %></p>
  </section>

  <!-- üî• Bot√≥n para enviar a Factus SIN recargar -->
  <button 
      class="btn btn-success"
      onclick="enviarFactus('<%= factura.id %>')">
      üöÄ Enviar a Factus
  </button>

  <br><br>

  <a href="/facturas" class="btn">‚¨Ö Volver al listado</a>


  <!-- =========================== -->
  <!-- üî• SCRIPT PARA FACTUS      -->
  <!-- =========================== -->
  <script>
    async function enviarFactus(id) {
      try {
        const respuesta = await fetch('/factus/enviar/' + id);
        const data = await respuesta.json();

        console.log("RESP FACTUS:", data);

        if (!data.ok) {
          alert("‚ùå Error: " + JSON.stringify(data.error));
          return;
        }

        // Abrir PDF si Factus lo devuelve
        if (data.pdf_url) {
          window.open(data.pdf_url, "_blank");
        }

        alert("Factura enviada a Factus correctamente ‚úî");

      } catch (err) {
        console.error(err);
        alert("‚ùå Error enviando a Factus.");
      }
    }
  </script>

</body>
</html>



