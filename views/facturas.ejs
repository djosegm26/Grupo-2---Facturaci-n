<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Facturas</title>
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
  <header>
    <h1>Facturas</h1>
  </header>

  <main>
    <a href="/facturas/nuevo" class="btn-estilo1">Nueva Factura</a>

    <h2>Listado de facturas</h2>
    <table id="tablaFacturas">
      <thead>
        <tr>
          <th>NÃºmero</th>
          <th>Fecha</th>
          <th>Cliente</th>
          <th>Total</th>
          <th>Estado</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if (facturas && facturas.length > 0) { %>
          <% for (const f of facturas) { %>
            <tr>
              <td><%= f.numero_factura %></td>
              <td><%= f.fecha_emision %></td>
              <td><%= f.cliente_id %></td>
              <td><%= parseFloat(f.total).toFixed(2) %></td>
              <td><%= f.estado %></td>
              <td style="text-align:center;">
                
                <!-- BotÃ³n Ver -->
                <a 
                  href="/facturas/ver/<%= f.id %>" 
                  class="btn-ver"
                  title="Ver factura">
                  ğŸ‘ Ver
                </a>

                <!-- BotÃ³n Enviar a Factus (SIN recargar la pÃ¡gina) -->
                <button 
                onclick="enviarFactus('<%= f.id %>')" 
                class="btn btn-success" 
                style="margin-left: 5px;">
                ğŸš€ Enviar a Factus
                </button>


              </td>
            </tr>
          <% } %>
        <% } else { %>
          <tr><td colspan="6">No hay facturas registradas.</td></tr>
        <% } %>
      </tbody>
    </table>
  </main>

  <!-- SCRIPT PARA ENVIAR FACTURA A FACTUS Y ABRIR EL PDF -->
<script>
async function enviarFactus(id) {
  try {
    const respuesta = await fetch('/factus/enviar/' + id);
    const data = await respuesta.json();

    if (!data.ok) {
      alert("âŒ Error: " + JSON.stringify(data.error));
      return;
    }

    if (data.pdf_url) {
      window.open(data.pdf_url, "_blank");
    } else {
      alert("Factura enviada pero no llegÃ³ URL de PDF.");
    }

  } catch (err) {
    console.error(err);
    alert("âŒ Error al conectar con el servidor.");
  }
}
</script>


</body>
</html>

