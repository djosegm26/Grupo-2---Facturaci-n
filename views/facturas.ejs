<!-- views/facturas.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Facturas</title>

  <!-- Hoja de estilos general -->
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>

  <!-- ============================== -->
  <!-- ENCABEZADO DE LA P√ÅGINA       -->
  <!-- ============================== -->
  <header>
    <h1>Facturas</h1>
  </header>

  <main>

    <!-- Bot√≥n para crear nueva factura -->
    <a href="/facturas/nuevo" class="btn-estilo1">Nueva Factura</a>

    <h2>Listado de facturas</h2>

    <!-- ============================== -->
    <!-- TABLA PRINCIPAL DE FACTURAS    -->
    <!-- ============================== -->
    <table id="tablaFacturas">
      <thead>
        <tr>
          <th>N√∫mero</th>
          <th>Fecha</th>
          <th>Cliente</th>
          <th>Total</th>
          <th>Estado</th>
          <th>Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% if (facturas && facturas.length > 0) { %>

          <!-- Recorremos todas las facturas -->
          <% for (const f of facturas) { %>
            <tr>

              <!-- Datos principales -->
              <td><%= f.numero_factura %></td>
              <td><%= f.fecha_emision %></td>

              <!-- Aqu√≠ se muestra el ID del cliente (puedes reemplazar esto con el nombre si lo unes con JOIN) -->
              <td><%= f.cliente_id %></td>

              <!-- Total formateado -->
              <td><%= parseFloat(f.total).toFixed(2) %></td>

              <td><%= f.estado %></td>

              <!-- ============================== -->
              <!-- ACCIONES: Ver / Enviar Factus  -->
              <!-- ============================== -->
              <td style="text-align:center;">
                
                <!-- Ver factura completa -->
                <a 
                  href="/facturas/ver/<%= f.id %>"
                  class="btn-ver"
                  title="Ver factura">
                  üëÅ Ver
                </a>

                <!-- Enviar a Factus -->
                <!-- Se hace por fetch sin recargar la p√°gina -->
                <button 
                  onclick="enviarFactus('<%= f.id %>')" 
                  class="btn btn-success" 
                  style="margin-left: 5px;">
                  üöÄ Enviar a Factus
                </button>

              </td>
            </tr>
          <% } %>

        <% } else { %>

          <!-- Cuando no hay registros -->
          <tr>
            <td colspan="6">No hay facturas registradas.</td>
          </tr>

        <% } %>
      </tbody>
    </table>
  </main>

  <!-- =========================================== -->
  <!-- SCRIPT que gestiona el env√≠o a FACTUS       -->
  <!-- =========================================== -->
<script>
async function enviarFactus(id) {
  try {

    // Petici√≥n al backend para enviar la factura a Factus
    const respuesta = await fetch('/factus/enviar/' + id);
    const data = await respuesta.json();

    // Si Factus devuelve error
    if (!data.ok) {
      alert("‚ùå Error: " + JSON.stringify(data.error));
      return;
    }

    // Si llega un PDF, abrirlo
    if (data.pdf_url) {
      window.open(data.pdf_url, "_blank");
    } else {
      alert("Factura enviada pero no lleg√≥ URL de PDF.");
    }

  } catch (err) {

    console.error(err);
    alert("‚ùå Error al conectar con el servidor.");

  }
}
</script>

</body>
</html>


